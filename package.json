{
	"name": "zope",
	"displayName": "Zope",
	"description": "Adds extra functionality to a workspace when developing Zope applications.",
	"version": "0.0.1",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/CraicOverflow89/vsc-zope/issues"
	},
	"homepage": "https://github.com/CraicOverflow89/vsc-zope",
	"repository": {
		"type": "git",
		"url": "https://github.com/CraicOverflow89/vsc-zope"
	},
	"publisher": "CraicOverflow89",
	"icon": "media/icons/logo.png",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"dtml", "zope"
	],
	"activationEvents": [
		"onCommand:zope.lookup",
		"onCommand:zope.register",
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "zope.lookup",
				"title": "Lookup Reference"
			},
			{
				"command": "zope.register",
				"title": "Register Project"
			}
		],
        "grammars": [
            {
                "language": "dtml",
                "scopeName": "source.dtml",
                "path": "./syntaxes/dtml.tmLanguage.json"
            }
        ],
		"languages": [
            {
                "id": "dtml",
                "aliases": [
                    "DTML"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
		"views": {
			"zope-explorer": [
				{
					"id": "zope-view",
					"name": "",
					"icon": "media/icons/logo.png"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "zope-explorer",
					"title": "Zope",
					"icon": "media/icons/logo.png"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "zope-view",
				"contents": "%view.workbench.zope-view.config%",
				"when": "zope-active == true"
			},
			{
				"view": "zope-view",
				"contents": "%view.workbench.zope-view.empty%",
				"when": "zope-active == false && workbenchState == empty"
			},
			{
				"view": "zope-view",
				"contents": "%view.workbench.zope-view.unregistered-folder%",
				"when": "zope-active == false && workbenchState == folder"
			},
			{
				"view": "zope-view",
				"contents": "%view.workbench.zope-view.unregistered-workspace%",
				"when": "zope-active == false && workbenchState == workspace && workspaceFolderCount != 0"
			},
			{
				"view": "zope-view",
				"contents": "%view.workbench.zope-view.unregistered-workspace-empty%",
				"when": "zope-active == false && workbenchState == workspace && workspaceFolderCount == 0"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
